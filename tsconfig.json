{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "pretty": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["DOM", "ES2022"],
    "types": ["web"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
