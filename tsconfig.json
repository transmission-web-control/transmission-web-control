{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "pretty": true,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "DOM",
      "ES2022"
    ],
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  }
}
